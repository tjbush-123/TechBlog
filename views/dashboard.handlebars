<h1>My Dashboard</h1>
{{#each posts}}
    <div class="post">
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <button class= "edit-me" data-id="{{this.id}}">Edit</a></button>
        <button class="btn-danger" data-id="{{this.id}}">DELETE</button>
    </div>
{{/each}}
<div id="edit-form"></div>


<div class="new-post-form">
  <h2>Create New Post</h2>
  <form>
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" id="title" placeholder="Enter title">
    </div>
    <div class="form-group">
      <label for="content">Content:</label>
      <textarea id="content" placeholder="Enter content"></textarea>
    </div>
    <button type="submit" id="create-post-btn">SEND ONE</button>
  </form>
</div>

<script src="./js/post.js"></script>